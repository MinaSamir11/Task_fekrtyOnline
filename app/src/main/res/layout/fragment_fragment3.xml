<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-128dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Create New Account"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:src="@drawable/addphoto"
                    app:civ_border_color="#5C5B5B"
                    app:civ_border_overlay="false"
                    app:civ_border_width="1dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/gudea_bold"
                    android:text="Full Name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <MaterialEditText
                    android:id="@+id/et_name_RG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="monospace"
                    android:hint="Your Full Name"
                    android:inputType="text"
                    android:textAllCaps="false"
                    android:textColorHint="#25B92D"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:floatingLabel="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/gudea_bold"
                    android:text="Birthday"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <MaterialEditText
                    android:id="@+id/et_birthday_RG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:hint="Birthday"
                    android:inputType="text"
                    android:textAllCaps="false"
                    android:textColorHint="#25B92D"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:floatingLabel="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/gudea_bold"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <MaterialEditText
                    android:id="@+id/et_email_RG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textAllCaps="false"
                    android:textColorHint="#25B92D"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:floatingLabel="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/gudea_bold"
                    android:text="Password"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    android:textColorHint="#25B92D"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#25B92D">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password_RG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="monospace"
                        android:inputType="textPassword"
                        android:textColorHint="#25B92D"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/gudea_bold"
                    android:text="Address/Location"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <MaterialEditText
                    android:id="@+id/et_address_RG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:hint="Your Address"
                    android:inputType="text"
                    android:textAllCaps="false"
                    android:textColorHint="#25B92D"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:floatingLabel="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/gudea_bold"
                    android:text="Phone Number"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <MaterialEditText
                    android:id="@+id/et_phone_RG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:hint="Your Phone Number"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textAllCaps="false"
                    android:textColorHint="#25B92D"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:floatingLabel="true" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_submit_RG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#F7F2F2"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>